{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "types": [
      "react/next",
      "react-dom/next"
    ]
  },
  "include": [
    "app/**/*"
  ]
}
